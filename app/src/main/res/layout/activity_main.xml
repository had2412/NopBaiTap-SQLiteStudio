<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText android:id="@+id/editTextId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:visibility="gone" />

    <EditText android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:layout_below="@+id/editTextId"/>

    <EditText android:id="@+id/editTextAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:layout_below="@+id/editTextName"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editTextAge"
        android:textColor="@color/black"
        android:text="Insert Data"
        android:id="@+id/btnInsert"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editTextAge"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/btnInsert"
        android:text="Read Data"
        android:id="@+id/btnRead"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editTextAge"
        android:textColor="@color/black"
        android:text="Update Data"
        android:layout_toRightOf="@+id/btnRead"
        android:id="@+id/btnUpdate"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/editTextAge"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/btnUpdate"
        android:text="Delete Data"
        android:id="@+id/btnDelete"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnInsert"
        android:layout_marginTop="16dp"/>
</RelativeLayout>